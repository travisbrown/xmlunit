<project name="XMLUnit" default="compile" basedir=".">
  <property name="src.dir" value="src" />
  <property name="format" value="plain" />
  <property name="version" value="0.2"/>

  <path id="classpath">
    <fileset dir="lib">
      <include name="*.jar"/>
    </fileset>
  </path>

  <target name="compile" depends="prepare" description="Compile Java Source">
    <javac
      srcdir="${src.dir}/java"
      destdir="classes"
      classpathref="classpath"
      debug="on"
    />
  </target>

  <target name="docs" depends="prepare">
    <javadoc
      classpathref="classpath"
      packagenames="org.custommonkey.*"
      destdir="build/docs/api"
      sourcepath="${src.dir}/java"/>
  </target>

  <target name="prepare">
    <mkdir dir="build/docs/api"/>
    <mkdir dir="classes"/>
    <mkdir dir="tests"/>
  </target>

  <target name="clean">
    <delete dir="classes"/>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="build/xmlunit.jar">
      <fileset dir="classes">
        <exclude name="**/test_*.class"/>
      </fileset>
    </jar>
  </target>

  <target name="dist" depends="clean,jar,docs">
    <zip zipfile="src.zip">
      <fileset dir="src"/>
    </zip>
    <zip zipfile="xmlunit-${version}.zip">
      <fileset dir="build"/>
      <fileset dir="lib">
        <include name="jdom.jar"/>
        <include name="xerces.jar"/>
      </fileset>
    </zip>
  </target>

  <target name="test" depends="compile">
    <junit fork="no">
      <classpath>
        <pathelement location="classes"/>
        <fileset dir="lib">
          <include name="*.jar"/>
        </fileset>
      </classpath>
      <formatter usefile="no" type="${format}"/>
      <batchtest>
        <fileset dir="${src.dir}/java">
          <include name="**/test_*.java"/>
        </fileset>
      </batchtest>
    </junit>
  </target>

</project>
